{
    "name": "uridecode",
    "displayName": "URI Encode/Decode",
    "description": "Decode or encode selected text as a URI/URL component",
    "version": "0.0.1",
    "publisher": "sryze",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.encodeURIComponent",
        "onCommand:extension.decodeURIComponent"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.encodeURIComponent",
                "title": "Encode Selection as URI Component"
            },
            {
                "command": "extension.decodeURIComponent",
                "title": "Decode Selection as URI Component"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
